{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.js"],
  "exclude": ["src/**/*.test.js"]
}
